<base:BaseContentPage
    x:Class="ZCarsDriver.Views.Driver.LinkDriverPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:ZhooSoft.Core;assembly=ZhooSoft.Core"
    xmlns:ctrl="clr-namespace:ZhooSoft.Controls;assembly=ZhooSoft.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:ZCarsDriver.ViewModel"
    x:TypeArguments="vm:LinkDriverViewModel"
    NavigationPage.HasNavigationBar="False">

    <Grid
        HorizontalOptions="Fill"
        RowDefinitions="auto,*"
        VerticalOptions="Fill">

        <!--  Header  -->
        <Grid
            x:Name="headerLayout"
            Grid.Row="0"
            Padding="15"
            BackgroundColor="{StaticResource Primary}"
            HorizontalOptions="Fill">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image
                Grid.Column="0"
                Margin="10,0,0,0"
                HorizontalOptions="Start"
                Source="back.png"
                VerticalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}" />
                </Image.GestureRecognizers>
            </Image>

            <Label
                Grid.Column="1"
                FontSize="18"
                Text="{Binding PageTitleName}"
                TextColor="White"
                VerticalOptions="Center" />
        </Grid>

        <!--  MainContent  -->
        <Grid
            Grid.Row="1"
            Padding="20"
            ColumnDefinitions="*"
            RowDefinitions="Auto, Auto, *, Auto, Auto, Auto">

            <!--  Search Bar  -->
            <SearchBar
                x:Name="SearchCabs"
                Grid.Row="0"
                Placeholder="Search"
                Text="{Binding SearchText, Mode=TwoWay}">
                <SearchBar.Behaviors>
                    <toolkit:EventToCommandBehavior Command="{Binding SearchCommand}" EventName="TextChanged" />
                </SearchBar.Behaviors>
            </SearchBar>

            <!--  Label for Available Cabs  -->
            <Label
                Grid.Row="1"
                Margin="5,10,0,5"
                FontAttributes="Bold"
                FontSize="14"
                Text="AVAILABLE CABS"
                TextColor="Gray" />

            <!--  Available Cabs List  -->
            <CollectionView
                x:Name="CabsListView"
                Grid.Row="2"
                ItemsSource="{Binding FilteredCabs}"
                SelectedItem="{Binding SelectedCab}"
                SelectionChangedCommand="{Binding SelectCabCommand}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <ctrl:CustomBorder
                            Margin="5"
                            Padding="10"
                            BackgroundColor="White"
                            BorderColor="LightGray"
                            CornerRadius="10">
                            <Grid Padding="5" ColumnDefinitions="Auto, *, Auto">

                                <!--  Car Image  -->
                                <Image
                                    Grid.Column="0"
                                    HeightRequest="40"
                                    Source="car_icon.png"
                                    VerticalOptions="Center"
                                    WidthRequest="40" />

                                <!--  Cab Details  -->

                                <VerticalStackLayout Grid.Column="1" Padding="10,0,0,0">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="{Binding RegistrationNumber}" />
                                    <Label
                                        FontSize="14"
                                        Text="{Binding Model}"
                                        TextColor="Gray" />
                                </VerticalStackLayout>

                                <!--  Selection Radio Button  -->
                                <RadioButton Grid.Column="2" GroupName="CabSelection" />
                            </Grid>
                        </ctrl:CustomBorder>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  Checkbox for RC Book  -->
            <Grid
                Grid.Row="3"
                Padding="10,5"
                ColumnDefinitions="Auto, *">
                <CheckBox
                    x:Name="RcBookCheckBox"
                    Grid.Column="0"
                    IsChecked="{Binding HasRcBook, Mode=TwoWay}" />
                <Label
                    Grid.Column="1"
                    FontSize="14"
                    Text="Have Original RC Book?"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </Grid>

            <!--  Continue Button  -->
            <Button
                x:Name="ContinueButton"
                Grid.Row="4"
                BackgroundColor="Gray"
                Command="{Binding ContinueCommand}"
                HeightRequest="50"
                IsEnabled="{Binding CanContinue}"
                Text="Continue"
                TextColor="White" />

            <!--  Change Vendor Link  -->
            <Grid
                Grid.Row="5"
                Padding="10,10"
                ColumnDefinitions="Auto, Auto"
                ColumnSpacing="20"
                VerticalOptions="Center">
                <Label
                    Grid.Column="0"
                    FontSize="14"
                    Text="Need to Switch Vendor ?"
                    VerticalOptions="Center" />
                <Button
                    Grid.Column="1"
                    Command="{Binding ChangeVendorCommand}"
                    FontSize="14"
                    Text=" Change Vendor"
                    TextColor="{x:StaticResource White}"
                    VerticalOptions="Center" />
            </Grid>

        </Grid>

    </Grid>



</base:BaseContentPage>
